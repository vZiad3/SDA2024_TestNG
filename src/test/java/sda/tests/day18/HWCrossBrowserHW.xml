<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Tests">
    <test name="Chrome browser ">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="sda.homeWorks.day17.hwCrossBrowser">
                <methods>
                    <include name="crossBro"></include>                <!-- those incuded test will be executed using Chrome browser -->
                </methods>
            </class>
        </classes>
    </test>

    <test name="FireFox browser  Test">
        <parameter name="browser" value="firefox"></parameter>          <!-- we used .toLowerCase()  to prevent spelling mistakes -->
        <classes>
            <class name="sda.homeWorks.day17.hwCrossBrowser">
                <methods>
                    <include name="crossBro"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>